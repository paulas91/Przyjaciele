<!DOCTYPE html>
<html>
  <head>
    <title>Przyjaciele</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= turbo_include_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= hotwire_livereload_tags if Rails.env.development? %>
  </head>

  <body class="container">
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <p class="navbar-brand mb-0"><%= app_title %></p>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <% if user_signed_in? %>
            <p class="mb-0 text-primary">
              <%= current_user.email %>
            </p>
          <% end %>
          <div class="navbar-nav">
            <%= render 'shared/nav_link', label: "All", path: root_path %>
            <%= render 'shared/nav_link', label: "School", path: school_friends_path %>
            <%= render 'shared/nav_link', label: "Work", path: work_friends_path %>
            <%= render 'shared/nav_link', label: "Holiday", path: holiday_friends_path %>
            <%= render 'shared/nav_link', label: "Party", path: party_friends_path %>
            <li class="nav-item">
              <% if user_signed_in? %>
                <%= link_to "log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
              <% else %>
                <%= link_to "log in", new_user_session_path, class: "nav-link" %>
              <% end %>
            </li>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
