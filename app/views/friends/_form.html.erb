<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 col-4">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>
  <div class="mb-3 col-4">
    <%= form.label :last_name,class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>
  <div class="mb-3 col-4">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="mb-3 col-4">
    <%= form.label :residence, class: "form-label" %>
    <%= form.text_field :residence, class: "form-control" %>
  </div>
  <div class="mb-3 col-4 form-group">
    <%= form.label :cognition, class: "form-label" %>
    <%= form.select :cognition, Friend.cognitions.keys, {include_blank: "select cognition"}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
